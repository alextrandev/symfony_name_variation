{% extends "base.html.twig" %}

{% block title %}
	Name Variation
{% endblock %}

{% block body %}
	<main class="container">
		<h1>Name Variation</h1>
		<div>
			<label class="label" for="component-name">Enter your name</label>
			<form method="get" action="/">
				<input type="text" name="name" class="input" placeholder="your name" id="your-name" autocomplete="off"/>
				<input class="btn" type="submit" value="Submit">
			</form>
		</div>

		{% if name %}
			<h2>Result for
				{{ name }}
			</h2>

			<table class="table" border="1">
				<thead>
					<tr>
						<th>Attribute</th>
						<th>Value</th>
					</tr>
				</thead>

				{% for key,value in nameDetails %}
					<tr>
						<td>{{ key| replace({'-': ' '}) | title }}</td>
						<td>{{ value }}</td>
					</tr>
				{% endfor %}

			</table>
		{% endif %}

	</main>
{% endblock %}

{% block footer %}
	<footer>
		<small>Copyright &copy; Alex Tran</small>
	</footer>
{% endblock %}
